//<!-- Pie Chart for month 1 -->
$(function () {
    $('#pie1').highcharts({
        chart: {
            backgroundColor: '#ffffe6',
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie',
        },
        title: {
            text: '<%=@month1name%>',
            style: {
              color: "#241563"
            }
        },
        tooltip: {
            pointFormat: '{series.name}: <b>${point.y}</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '<b>{point.name}</b>',
                    style: {
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                    }
                }
            }
        },
        series: [{
            name: 'Spent',
            colorByPoint: true,
            data: <%= @series1.to_json.html_safe %>
        }]
    });
});



