<h1 id = "h1ex">Compare Months</h1>

<div class="row">
  <div class="col-md-12">
  </div>
</div>

<% if @months.empty? %>
  <div class="row">
    <div class="col-md-3">
    </div>

    <div class = "col-md-6">
      <center> You do not have enough data to compare months. </center>
    </div>

    <div class="col-md-3">
    </div>
  </div>

<% else %>

<div class = row>
  <div class = "col-md-3">
  </div>
  <div class="col-md-6">
    <%= form_tag(compare_create_path, method: "get", remote: true, role: "form", class: "form", id: "form") do %>
      <div class="form-group">
        <label class="control-label">Month 1:</label>
        <%= select_tag(:month1select,
            options_for_select(
              @months), class: "form-control", :onchange => ("$('#form').submit();")) %>
      </div>

      <div class="form-group">
        <label class="control-label">Month 2:</label>
        <%= select_tag(:month2select,
            options_for_select(
              @months), class: "form-control", :onchange => ("$('#form').submit();")) %>
      </div>
    <% end %>
  </div>
</div>

<div class="row col-md-offset-1 col-md-11">
  <div id="search_results"> </div>
</div>

<% end %>

<div class="row">
  <h1> </h1>
  <center><button onclick="goBack()">Back</button></center>
</div>


<script>
function goBack(){
  window.history.back();
}
</script>
