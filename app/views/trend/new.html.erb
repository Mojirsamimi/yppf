<!-- Trend chart for overall spending -->
<script>
$(function () {
    var mdata = <%=@chartarray.to_json.html_safe%>
    var touse = []

    for (i = 0; i < mdata.length; i++) {
      var x = [Date.UTC(mdata[i][0][0], mdata[i][0][1]), mdata[i][1]]
      touse.push(x)
    }
    $('#container').highcharts({
        chart: {
            zoomType: 'x',
            backgroundColor: '#ffffe6',
            type: 'area'
        },
        title: {
            text: 'Spending',
            style: {
              color: "#241563"
            }
        },
        subtitle: {
            text: document.ontouchstart === undefined ?
                    'Click and drag in the plot area to zoom in' : 'Pinch the chart to zoom in',
            style: {
              color: "#241563"
            }
        },
        xAxis: {
            type: 'datetime',
            tickColor: "#241563",
            labels: {
              style: {
                color: "#241563"
              }
            },
            title: {
              style: {
                color: "#241563"
              }
            }
        },
        yAxis: {
            title: {
                text: '$$$',
                style: {
                  color: "#241563"
                }
            },
            labels: {
              style: {
                color: "#241563"
              }
            }
        },
        legend: {
            enabled: false
        },
        plotOptions: {
            area: {
                fillColor: {
                    linearGradient: {
                        x1: 0,
                        y1: 0,
                        x2: 0,
                        y2: 1
                    },
                    stops: [
                        // [0, Highcharts.getOptions().colors[0]],
                        // [1, Highcharts.Color(Highcharts.getOptions().colors[0]).setOpacity(0).get('rgba')]
                        [0, '#ED6A5A'],
                        [1, '#fbe1de']
                    ]
                },
                marker: {
                    radius: 2
                },
                lineWidth: 1,
                states: {
                    hover: {
                        lineWidth: 1
                    }
                },
                threshold: null
            }
        },

        series: [{
            type: 'area',
            name: 'Money',
            data: touse,
            color: '#ED6A5A'
        }]
    });
});
</script>
