<%= form_for(@income) do |f| %>
  <% if @income.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@income.errors.count, "error") %> prohibited this income from being saved:</h2>

      <ul>
      <% @income.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-2">
      <%= f.label 'Income title' %><br>
      <%= f.text_field :income %>
    </div>
    <div class="col-md-1">
      <%= f.label 'Type' %><br>
      <%= f.collection_select :incometype, Income::TYPE, :to_s, :to_s,
         :include_blank => true %>
    </div>
    <div class="col-md-2">
      <%= f.label :value %><br>
      <%= f.text_field :value %>
    </div>
    <div class="col-md-1">
      <%= f.label 'Frequency' %><br>
      <%= f.collection_select :frequency, Income::FREQUENCY, :to_s, :to_s,
         :include_blank => true %>
    </div>
    <div class="col-md-2">
      <%= f.label 'Day Received' %><br>
      <%= f.number_field :day_rec %>
    </div>
    <div class="col-md-2">
      <%= f.label :month %><br>
      <%= f.number_field :month %>
    </div>
    <div class="col-md-2">
      <%= f.label :year %><br>
      <%= f.number_field :year %>
    </div>
  </div>
  <h1></h1>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
