<%= form_for(@income,:url => { :action => "create" },remote: true,:html => {:class => 'form-horizontal',:id => 'new_income'}) do |f| %>

<div class="form-group error">

    <%= f.label 'Name',:class => 'col-sm-2 control-label',:for => 'income_income' %>

    <div class="col-sm-10">

        <%= f.text_field :income,:class => 'form-control'%>

    </div>
</div>

<div class="form-group">

    <%= f.label 'Value',:class => 'col-sm-2 control-label',:for => 'income_value' %>

    <div class="col-sm-10">
        <div class="input-group">
            <span class="input-group-addon">$</span>
            <%= f.text_field :value,:class => 'form-control'%>
        </div>
    </div>
</div>

<%end%>

