    <%= f.text_field :actvalue %>
  </div>
  <div class="field">
    <%= f.label :percent %><br>
    <%= f.number_field :percent %>
  </div>
  <div class="field">
    <%= f.label :month %><br>
    <%= f.number_field :month %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
