<% if @one_exp_ref.errors.any? %>

<div class="alert alert-danger" role="alert">

	<% @one_exp_ref.errors.full_messages.each do |message| %>
	<p>
		<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
		<%= message %>
	</p>
	<% end %>
</div>

<% end %>

<%= form_for(@one_exp_ref,:url => { :action => "createone" },remote: true,:html => {:class => 'form-horizontal',:id => 'newone_expense_reference'}) do |f| %>

<div class="form-group error">

	<%= f.label 'Name',:class => 'col-sm-2 control-label',:for => 'expense_reference_ref_name' %>

	<div class="col-sm-10">

		<%= f.text_field :ref_name,:class => 'form-control'%>

	</div>
</div>
<div class="form-group">
	<%= f.label "Category",:class => 'col-sm-2 control-label',:for => 'expense_reference_expense_category_id' %>
	<div class="col-sm-10">

		<%= f.select(:expense_category_id ,options_for_select(expense_category_options),{},:class => 'form-control')%>

	</div>

</div>
<div class="form-group">

	<%= f.label 'Value',:class => 'col-sm-2 control-label',:for => 'expense_reference_ref_value' %>

	<div class="col-sm-10">
		<div class="input-group">
			<span class="input-group-addon">$</span>
			<%= f.text_field :ref_value,:class => 'form-control'%>
		</div>
	</div>
</div>

<%end%>

