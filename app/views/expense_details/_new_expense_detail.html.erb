<%= form_for(@expense_detail,:url => { :action => "create" },remote: true,:html => {:class => 'form-horizontal'}) do |f| %>
                <div class="form-group">

                    <%= f.label 'Value',:class => 'col-sm-2 control-label',:for => 'expdet_value' %>

                    <div class="col-sm-10">
                        <div class="input-group">
                            <span class="input-group-addon">$</span>
                            <%= f.text_field :expdet_value,:class => 'form-control'%>
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <%= f.label 'Date',:class => 'col-sm-2 control-label',:for => 'expdet_date' %>

                    <div class="col-sm-10">

                        <%= f.text_field :expdet_date,:class => 'form-control', :value => DateTime.now.in_time_zone("EST")%>

                    </div>
                </div>
                <div class="form-group">

                    <%= f.label 'Description',:class => 'col-sm-2 control-label',:for => 'expdet_description' %>

                    <div class="col-sm-10">

                        <%= f.text_area :expdet_description,:class => 'form-control'%>

                    </div>
                </div>
                <%end%>
